{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist-node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": [
    "src/build_nav_btc_daily.ts",
    "src/export_token_price_daily.ts",
    "src/fetch_btc_daily.ts",
    "src/fetch_wbtc_daily.ts",
    "src/config.ts",
    "src/utils/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", "dist-node"]
}
